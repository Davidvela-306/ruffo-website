---
import '@fontsource-variable/inter';

// 'DM Sans'
// Nunito
// Dosis
// Outfit
// Roboto
// Literata
// 'IBM Plex Sans'
// Karla
// Poppins
// 'Fira Sans'
// 'Libre Franklin'
// Inconsolata
// Raleway
// Oswald
// 'Space Grotesk'
// Urbanist
---

<style is:inline>
  :root {
    /* üé® Fonts */
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    /* üåà Brand ‚Äì Monocrom√≠a naranja (vivo pero controlado) */
    --aw-color-primary: 255 109 40; /* base */
    --aw-color-secondary: 214 84 32; /* shade */
    --aw-color-accent: 255 178 140; /* tint */

    /* üß± Backgrounds (claros, fr√≠os, descansan la vista) */
    --aw-color-bg-page: 246 248 252;
    --aw-color-bg-muted: 235 240 248;

    /* ‚úçÔ∏è Text (azul gris√°ceo, alto contraste) */
    --aw-color-text-heading: 30 41 59; /* slate-800 */
    --aw-color-text-default: 51 65 85; /* slate-700 */
    --aw-color-text-muted: 100 116 139; /* slate-500 */

    ::selection {
      background-color: rgb(var(--aw-color-accent));
      color: rgb(var(--aw-color-text-heading));
    }
  }

  /* üåô Dark mode */
  .dark {
    /* üåà Brand (misma identidad, m√°s luminancia) */
    --aw-color-primary: 255 130 70;
    --aw-color-secondary: 220 100 55;
    --aw-color-accent: 255 190 155;

    /* üß± Backgrounds (azul profundo, no negro puro) */
    --aw-color-bg-page: 15 23 42; /* slate-900 */
    --aw-color-bg-muted: 30 41 59; /* slate-800 */

    /* ‚úçÔ∏è Text */
    --aw-color-text-heading: 248 250 252; /* slate-50 */
    --aw-color-text-default: 226 232 240; /* slate-200 */
    --aw-color-text-muted: 148 163 184; /* slate-400 */

    ::selection {
      background-color: rgb(var(--aw-color-primary));
      color: rgb(15 23 42);
    }
  }
</style>
